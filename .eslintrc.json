{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "mocha": true
  },
  "plugins": [
      "mocha"
  ],
  "rules": {
    "indent": [2, 4],
    "comma-dangle": 0,
    "id-length": 0,
    "new-cap": 0,
    "no-console": 0,
    "max-len": 0,
    "space-before-function-paren": 0,
    "no-underscore-dangle": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0
  }
}
